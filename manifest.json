{
  "manifest_version": 3,
  "name": "AI Chat Bridge",
  "version": "1.2.0",
  "description": "Bridge between AI chat sessions - Let AI agents talk to each other. Supports Gemini, ChatGPT, DeepSeek, DuckDuckGo AI and more!",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*",
    "https://*.deepseek.com/*",
    "https://duckduckgo.com/*",
    "https://duck.ai/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "backend-client.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*",
        "https://*.deepseek.com/*",
        "https://duckduckgo.com/*",
        "https://duck.ai/*"
      ],
      "js": [
        "platforms/base-adapter.js",
        "platforms/gemini-adapter.js",
        "platforms/chatgpt-adapter.js",
        "platforms/deepseek-adapter.js",
        "platforms/duckduckgo-adapter.js",
        "platforms/index.js",
        "agent-registration/state.js",
        "agent-registration/ui.js",
        "agent-registration/actions.js",
        "agent-registration/main.js",
        "content.js"
      ],
      "css": [
        "styles/overlay.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open AI Chat Bridge"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}